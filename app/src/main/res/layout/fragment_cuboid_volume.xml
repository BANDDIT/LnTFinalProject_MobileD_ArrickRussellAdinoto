<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CuboidVolume"
    android:background="@color/blue">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/WidthCu_et"
        android:hint="Width size(Numbers only)"
        android:textColorHint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/LengthCu_et"
        android:hint="Length size(Numbers only)"
        android:textColorHint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/WidthCu_et"/>
    <EditText
        android:id="@+id/HeightCu_et"
        android:hint="Height size(Numbers only)"
        android:textColorHint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LengthCu_et"/>
    <TextView
        android:id="@+id/ResultCuboid_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Result:"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LengthCu_et"/>

    <TextView
        android:id="@+id/ResultRealCuboid_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ResultCuboid_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>